<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="author" content="">
        <title>Customer Name - Blog</title>
        <!-- Bootstrap core CSS -->
        {% include 'pages/common/head_assets.twig' %}
        <link rel="stylesheet" href="/assets/css/blocks.css?3" >
    </head>
    <body class="fw-light text-secondary">
        {% include 'pages/common/top_menu_panel.twig' %}
        <section class="container-fluid row justify-content-center bg-dark pb-1 pt-1">
            <img src="{{ category.my_image_url }}" class="img-fluid" />
        </section>
        <div class="bg-dark pt-2 text-white">
            <div class="container-fluid p-5 row">
                {% for category in categories %}
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="d-flex vstack">
                        <a href="/list_posts?categoria_id={{ category.id }}" class="card-body"><img src="{{ category.my_image_url }}" class="img-fluid"/>
                        <h3>{{ category.category_name }}</h3></a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% include 'pages/frontend/footer.twig' %}
    </body>
</html>
